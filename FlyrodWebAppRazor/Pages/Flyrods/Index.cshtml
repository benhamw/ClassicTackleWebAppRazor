@{
    ViewData["Title"] = "Index";
}

<h1>Flyrods</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Flyrod[0].Maker)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flyrod[0].Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flyrod[0].LengthFeet)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Flyrod[0].Sections)
            </th*@
            <th>
                @Html.DisplayNameFor(model => model.Flyrod[0].LineWeight)
            </th>
           @* <th>
                @Html.DisplayNameFor(model => model.Flyrod[0].YearMade)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Flyrod[0].Type)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Flyrod[0].Construction)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Flyrod) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Maker.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LengthFeet)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Sections)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.LineWeight)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.YearMade)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Construction)
            </td>*@
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
